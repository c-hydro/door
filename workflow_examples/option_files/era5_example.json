{
    "TAGS":{
        "source"   : "ERA5",
        "product"  : "reanalysis-era5-single-levels",
        "prod_name": "ERA5-T"
    },
    "DATASETS":{
        "destination" : {
            "type" : "local",
            "path" : "output/{source}/{product}/%Y/T{agg_method}",
            "filename" : "{prod_name}{agg_method}_sample_%Y%m%d.tif"
        }
    },
    "DOOR_DOWNLOADER" :             {
        "source"    : "ERA5",
        "product"   : "{product}",
        "destination" : "{DATASETS.destination}",
        "bounds" : [8, 38.5, 10, 41.5],
        "options" : {
            "variables" : ["2m_temperature"],
            "agg_method" : [["mean", "max", "min"]],
            "ts_per_year" : 36,
            "ts_per_year_agg" : 365
        }
    }
}